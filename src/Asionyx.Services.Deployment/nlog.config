<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <!-- Targets: structured JSON output using JsonLayout -->
  <targets>
    <target name="console" xsi:type="Console">
      <layout xsi:type="JsonLayout" includeAllProperties="false" renderEmptyObject="false">
        <attribute name="timestamp" layout="${longdate}" />
        <attribute name="level" layout="${level:upperCase=true}" />
        <attribute name="logger" layout="${logger}" />
        <attribute name="correlationId" layout="${event-properties:item=CorrelationId}" />
        <attribute name="message" layout="${message}" />
        <attribute name="exception" layout="${exception:format=toString}" />
      </layout>
    </target>

    <target name="file" xsi:type="File" fileName="logs/asionyx.json" keepFileOpen="false">
      <layout xsi:type="JsonLayout" includeAllProperties="false" renderEmptyObject="false">
        <attribute name="timestamp" layout="${longdate}" />
        <attribute name="level" layout="${level:upperCase=true}" />
        <attribute name="logger" layout="${logger}" />
        <attribute name="correlationId" layout="${event-properties:item=CorrelationId}" />
        <attribute name="message" layout="${message}" />
        <attribute name="exception" layout="${exception:format=toString}" />
      </layout>
    </target>
  </targets>

  <!-- Rules -->
  <rules>
    <logger name="*" minlevel="Debug" writeTo="console,file" />
  </rules>

</nlog>
